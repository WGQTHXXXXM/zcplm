    const MATERIAL_CREATE1 = '新增物料一审';
    const MATERIAL_CREATE2 = '新增物料二审';
    const MATERIAL_CREATE3 = '新增物料三审';
    const MATERIAL_UPDATE = '更新物料一审';
    const MATERIAL_UPDATE2 = '更新物料二审';
